<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/evaluating_tv_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/shape_rctg_score"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="8dp"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <com.jn.iyuba.concept.simple.util.widget.SelectWordTextView
        android:id="@+id/evaluating_tv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:gravity="center_horizontal"
        android:text="英文"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/evaluating_tv_ch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:gravity="center_horizontal"
        android:text="中文"
        android:textColor="@android:color/black"
        android:textSize="12sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/evaluating_iv_play"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/icon_eval_play" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.iyuba.widget.rpb.RoundProgressBar
                android:id="@+id/evaluating_rpb_record"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@mipmap/icon_eval"
                app:rpbCircleColor="#F2F2F2"
                app:rpbCircleProgressColor="?colorPrimary"
                app:rpbCircleWidth="2dp" />


        </LinearLayout>


        <ImageView
            android:id="@+id/evaluating_iv_play_oneself"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:src="@mipmap/icon_eval_play_record" />


        <ImageView
            android:id="@+id/evaluating_iv_submit"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:src="@mipmap/icon_eval_publish"
            android:visibility="visible" />


        <ImageView
            android:id="@+id/evaluating_iv_share"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:src="@mipmap/icon_share"
            android:visibility="gone" />


    </LinearLayout>

</LinearLayout>


